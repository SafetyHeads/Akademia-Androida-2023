<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ExperienceStructureFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.safetyheads.akademiaandroida.H2View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2x"
            app:text="Experience Structure"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/experience_structure"
            android:contentDescription="@string/experience_structure_image"
            android:layout_marginTop="@dimen/margin_2.5x"
            android:layout_marginBottom="@dimen/margin_2x"
            android:layout_gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>