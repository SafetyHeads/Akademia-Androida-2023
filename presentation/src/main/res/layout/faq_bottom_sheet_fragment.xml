<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/faqBottomSheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_2x"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="@drawable/rounded_background"
    >

    <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/size_1.5x"
        android:background="@color/n_70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_text_view"
        style="@style/Text_comforta_bold_18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_4x"
        android:layout_marginStart="@dimen/size_3x"
        android:text="Lorem ipsum dolor sit amet"
        android:textColor="@color/s_60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/answer_text_view"
        style="@style/Poppins_regular_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_2x"
        android:layout_marginEnd="@dimen/size_3x"
        android:text="Aliquam consequat magna erat, nec finibus neque condimentum vulputate. In eget purus ac augue mattis pharetra. Aliquam scelerisque, sapien vel fringilla finibus, mi sem condimentum odio, quis ultrices dolor purus eu lorem. Phasellus scelerisque nunc nunc, in hendrerit lorem lacinia eget. Ut ut dolor a nisl dignissim interdum ut in mauris. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view" />

    <Button
        style="@style/StyledButton"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:text="OK"
        android:layout_marginEnd="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
