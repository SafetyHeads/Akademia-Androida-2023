<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/button_back"
        style="@style/Back_arrow"
        android:layout_width="@dimen/size_3x"
        android:layout_height="@dimen/size_3x"
        android:layout_marginStart="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_5x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_button" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_3x"
        android:layout_marginStart="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_back"
        app:srcCompat="@drawable/h2_view_line_greater_size"
        android:importantForAccessibility="no"/>

    <TextView
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/change_password"
        android:textColor="#18156E"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2x"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/current_password"
        android:textColor="#1B2116"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintTop_toBottomOf="@id/change_password"
        tools:ignore="SmallSp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_eText_current_password"
        style="@style/Layout_eText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_3x"
        android:layout_marginEnd="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_0.25x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_current_password"
            style="@style/EText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2x"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/new_password"
        android:textColor="#1B2116"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintTop_toBottomOf="@id/layout_eText_current_password"
        tools:ignore="SmallSp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_eText_new_password"
        style="@style/Layout_eText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_3x"
        android:layout_marginEnd="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_0.25x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_new_password"
            style="@style/EText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/confirm_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2x"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/confirm_new_password"
        android:textColor="#1B2116"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintTop_toBottomOf="@id/layout_eText_new_password"
        tools:ignore="SmallSp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_eText_confirm_new_password"
        style="@style/Layout_eText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_3x"
        android:layout_marginEnd="@dimen/size_3x"
        android:layout_marginTop="@dimen/size_0.25x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_new_password"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_confirm_new_password"
            style="@style/EText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/size_3.5x"
        android:layout_marginEnd="@dimen/size_3x"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#1B2116"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_eText_confirm_new_password"
        tools:ignore="SmallSp"
        tools:text="Your password must have at least 8 characters and contain at least two of the following:\n
        - uppercase letters\n
        - lowercase letters\n
        - numbers\n
        - symbols" />

    <TextView
        android:id="@+id/reject_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/reject"
        android:textColor="#707071"
        android:padding="@dimen/size_1.5x"
        app:layout_constraintTop_toTopOf="@+id/save_password"
        app:layout_constraintEnd_toStartOf="@+id/save_password"/>

    <TextView
        android:id="@+id/save_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_3.5x"
        android:fontFamily="@font/poppins_semibold"
        android:padding="@dimen/size_1.5x"
        android:text="@string/save"
        android:textColor="#8BB863"
        app:layout_constraintEnd_toEndOf="@id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>