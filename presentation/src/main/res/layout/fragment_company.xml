<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragments.company.CompanyFragment">

    <com.safetyheads.akademiaandroida.presentation.ui.components.H2View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text="Company"
        android:layout_marginTop="@dimen/size_3x"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2.5x"
        style="@style/tabLayout"
        app:tabTextAppearance="@style/tabLabelText">

    </com.google.android.material.tabs.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/n_60"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="@dimen/size_3.5x"
        android:paddingBottom="@dimen/size_3x"
        android:src="@drawable/logo_with_company_name"
        android:contentDescription="@string/logo_with_company_name"/>

</LinearLayout>