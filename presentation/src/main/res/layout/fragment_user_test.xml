<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in" />

    <Button
        android:id="@+id/firebaseIdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaz FCM" />

    <Button
        android:id="@+id/showUserDbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokaz user z bazy danych" />

    <Button
        android:id="@+id/setFirebaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ustaw FCM" />

    <Button
        android:id="@+id/removeFirebaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyczyść FCM z bazy danych" />

    <TextView
        android:id="@+id/message"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/size_3x"
        android:layout_marginHorizontal="@dimen/size_3x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>