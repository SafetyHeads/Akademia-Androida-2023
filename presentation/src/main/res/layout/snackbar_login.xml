<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/n_110"
    android:layout_marginStart="@dimen/size_3x"
    android:layout_marginEnd="@dimen/size_3x">

    <TextView
        android:id="@+id/text_login_snackbar"
        style="@style/Snackbar_text_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_2x"
        android:layout_marginTop="@dimen/size_2x"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="@dimen/size_2x"
        android:text="@string/we_have_emailed_your_password_reset_link"
        android:textColor="@color/n_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_icon_login_snackbar"
        android:layout_width="@dimen/size_3x"
        android:layout_height="@dimen/size_3x"
        android:layout_marginTop="@dimen/size"
        android:layout_marginEnd="@dimen/size"
        android:src="@drawable/close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>