<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_7x"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.safetyheads.akademiaandroida.presentation.ui.components.BackArrowView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_card_view"
        android:layout_width="@dimen/size_6x"
        android:layout_height="@dimen/size_6x"
        android:layout_marginTop="@dimen/size"
        android:layout_marginEnd="@dimen/size"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="@dimen/size_6x"
            android:layout_height="@dimen/size_6x"
            android:src="@drawable/placeholder_avatar" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>